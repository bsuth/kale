#!/usr/bin/env luajit

local argparse = require('argparse')
require('erde.loader')

local cli = argparse('erde')
cli:add_complete()

cli:flag('-v --version', 'Print version')
cli:argument('script', 'Script to run'):args('0-1')

local args = cli:parse()

if args.version then
  print('0.2-1')
elseif args.script then
  require(args.script:gsub('%.erde$', ''))
else
  print('REPL not yet supported.')
end
